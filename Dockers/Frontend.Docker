FROM node:20-bookworm AS build

WORKDIR /app

# python + build essentials already easy here
RUN apt-get update && apt-get install -y python3 make g++ && rm -rf /var/lib/apt/lists/*

COPY ./frontend/. .

RUN npm install
COPY ./frontend/. .
COPY ./smartContract/target/idl/counter.json ./smartContract/target/types/counter.ts ./src/

RUN npm run build

FROM nginx:stable-alpine
WORKDIR /usr/share/nginx/html
RUN rm -rf ./*
COPY --from=build /app/dist ./
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]